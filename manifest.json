{
  "manifest_version": 2,

  "name": "GOV.UK Blinken",
  "description": "An extension for monitoring GOV.UK services",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "chrome/icons/grey.png",
    "default_popup": "app/blinken.html"
  },

  "background": {
    "scripts": ["chrome/blinken.js"]
  },

  "options_page": "chrome/options.html",

  "permissions": [
    "storage",
    "notifications"
  ]
}
